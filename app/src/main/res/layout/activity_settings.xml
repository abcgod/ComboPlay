<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent" android:layout_height="match_parent">
    <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="vertical">
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView android:id="@+id/textView" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Device Type"/>
            <RadioGroup android:id="@+id/radioGroupDeviceType" android:layout_width="wrap_content" android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioButtonTypeMaster"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Master" />

                <RadioButton
                    android:id="@+id/radioButtonTypeSlave"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Slave" />
            </RadioGroup>
            <TextView android:id="@+id/textView2" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Video Sync"/>
            <RadioGroup android:id="@+id/radioGroupSyncEnable" android:layout_width="wrap_content" android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioButtonSyncOn"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="On" />

                <RadioButton
                    android:id="@+id/radioButtonSyncOff"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Off" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:orientation="horizontal">
            <TextView android:id="@+id/textView5" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Debug"/>
            <RadioGroup android:id="@+id/radioGroupDebug" android:layout_width="wrap_content" android:layout_height="wrap_content">

                <RadioButton
                    android:id="@+id/radioButtonDebugOn"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="On" />

                <RadioButton
                    android:id="@+id/radioButtonDebugOff"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Off" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout android:layout_width="match_parent" android:layout_height="match_parent" android:orientation="horizontal">
            <TextView android:id="@+id/textView6" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="Video Path : "/>
            <TextView android:id="@+id/textViewVideoPath" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="TextView"/>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>